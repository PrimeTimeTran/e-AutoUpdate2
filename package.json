{
  "name": "1on1-auto-update",
  "version": "0.0.3",
  "description": "Chieu dep trai",
  "main": "./app/main.js",
  "scripts": {
    "start": "electron --debug .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "release": "electron-builder build",
    "publish": "build --mac -p always"
  },
  "repository": {
    "type": "git",
    "url": "git+git@github.com:chieuduong-bocasay/electron-1on1-auto-update.git"
  },
  "author": "Chieu Duong",
  "license": "MIT",
  "devDependencies": {
    "electron": "^8.2.4",
    "electron-builder": "^22.3.2"
  },
  "build": {
    "appId": "com.electron.app",
    "publish": [
      {
        "provider": "github",
        "owner": "chieuduong-bocasay",
        "repo": "electron-1on1-auto-update"
      }
    ],
    "win": {
      "publish": [
        "github"
      ],
      "target": [
        "nsis"
      ],
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "publish": [
        "github"
      ],
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "electron-updater": "^4.0.4"
  },
  "bugs": {
    "url": "https://github.com/chieuduong-bocasay/electron-1on1-auto-update/issues"
  },
  "homepage": "https://github.com/chieuduong-bocasay/electron-1on1-auto-update#README",
  "keywords": []
}
